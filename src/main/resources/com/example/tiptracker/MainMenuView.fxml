<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns:fx="http://javafx.com/fxml" fx:controller="com.example.tiptracker.controllers.MainMenuController"
      alignment="CENTER" spacing="20" prefWidth="600" prefHeight="400">
    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>
    <Button text="Input a Tip" onAction="#goToInputTip" prefWidth="200" prefHeight="50" />
    <Button text="Get Tips" onAction="#goToGetTips" prefWidth="200" prefHeight="50" />
    <Button text="Graph Tips" onAction="#goToGraphTips" prefWidth="200" prefHeight="50" />
</VBox>

